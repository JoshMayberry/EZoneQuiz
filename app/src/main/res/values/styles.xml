<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="colorButtonNormal">@color/colorSecondary</item>
    </style>

    <style name="Widget.AppCompat.EZoneQuiz.RadioButton.Answer" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_answerSize</item>
        <item name="android:text">@string/error</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">40sp</item>
    </style>
</resources>
