    <!-- Widget Styles -->
    <style name="Widget.AppCompat.EZoneQuiz.RadioButton" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item> <!-- For some reason, android:textAppearance is not changing the color -->
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:checked">false</item>
    </style>

    <style name="Widget.AppCompat.EZoneQuiz.CheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item> <!-- For some reason, android:textAppearance is not changing the color -->
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:checked">false</item>
    </style>

    <style name="Widget.AppCompat.EZoneQuiz.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item> <!-- For some reason, android:textAppearance is not changing the color -->
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    </style>

    <style name="Widget.AppCompat.EZoneQuiz.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLargeInverse</item>
    </style>

    <style name="TextAppearance.AppCompat.EZoneQuiz.Medium.Inverse.ChapterSelect" parent="@style/TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.EZoneQuiz.Large.Inverse.Subtitle" parent="@style/TextAppearance.AppCompat.Large.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>

        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.EZoneQuiz.Medium" parent="@style/TextAppearance.AppCompat.Medium">
