<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:src="@drawable/empty" />

            <TextView
                android:id="@+id/bookSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bookImage"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                style="@android:style/TextAppearance.Medium"
                tools:text="Subtitle"
                android:textSize="@dimen/text_titleSize"
                android:paddingBottom="18dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/bookBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="body text"
            style="@android:style/TextAppearance.Medium"
            android:padding="12dp"
            />
        <TextView
            android:id="@+id/bookQuoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Large"
            tools:text="'quote text'"
            android:padding="12dp"
            />
        <TextView
            android:id="@+id/bookQuoteSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            style="@android:style/TextAppearance.Medium"
            tools:text="- quote source"
            android:padding="12dp"
            />

    </LinearLayout>
</ScrollView>