<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/dialog_border">

    <TextView
        android:id="@+id/dialog_message_incorrect"
        style="@style/TextAppearance.AppCompat.EZoneQuiz.Medium.Inverse"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="0dp"
        tools:text="Incorrect answer" />

    <TextView
        style="@style/TextAppearance.AppCompat.EZoneQuiz.Large.Inverse"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:paddingTop="0dp"
        android:text="@string/dialog_tryAgain"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_button_yes"
            style="@style/Widget.AppCompat.EZoneQuiz.Button"
            android:layout_marginEnd="@dimen/button_spacing"
            android:background="@color/colorPrimaryLight"
            android:text="@string/dialog_yes" />

        <Button
            android:id="@+id/dialog_button_no"
            style="@style/Widget.AppCompat.EZoneQuiz.Button"
            android:layout_marginStart="@dimen/button_spacing"
            android:background="@color/colorPrimaryLight"
            android:text="@string/dialog_no" />
    </LinearLayout>
</LinearLayout>