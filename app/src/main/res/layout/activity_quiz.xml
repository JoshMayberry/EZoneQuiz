<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".QuizActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/quiz_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/empty"
        android:layout_weight="1" />

    <ProgressBar
        android:id="@+id/quizProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryLight"
        android:padding="@dimen/margin_answer" >
        <TextView
            android:id="@+id/quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Question Description"
            android:textSize="@dimen/text_titleSize"
            android:layout_marginBottom="@dimen/margin_answer" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.example.android.ezonequiz.MyNumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RadioButton
                android:id="@+id/radioButton_0"
                tools:text="radio answer 1"
                style="@style/Widget.AppCompat.EZoneQuiz.RadioButton.Answer"
                />
            <RadioButton
                android:id="@+id/radioButton_1"
                tools:text="radio answer 2"
                style="@style/Widget.AppCompat.EZoneQuiz.RadioButton.Answer"
                />
            <RadioButton
                android:id="@+id/radioButton_2"
                tools:text="radio answer 3"
                style="@style/Widget.AppCompat.EZoneQuiz.RadioButton.Answer" />
            <RadioButton
                android:id="@+id/radioButton_3"
                tools:text="radio answer 4"
                style="@style/Widget.AppCompat.EZoneQuiz.RadioButton.Answer" />
            <RadioButton
                android:id="@+id/radioButton_4"
                tools:text="radio answer 5"
                style="@style/Widget.AppCompat.EZoneQuiz.RadioButton.Answer" />
        </RadioGroup>
        <CheckBox
            android:id="@+id/checkBox_0"
            tools:text="check answer 1"
            style="@style/Widget.AppCompat.EZoneQuiz.CheckBox.Answer"
            />
        <CheckBox
            android:id="@+id/checkBox_1"
            tools:text="check answer 2"
            style="@style/Widget.AppCompat.EZoneQuiz.CheckBox.Answer"
            />
        <CheckBox
            android:id="@+id/checkBox_2"
            tools:text="check answer 3"
            style="@style/Widget.AppCompat.EZoneQuiz.CheckBox.Answer"
            />
        <CheckBox
            android:id="@+id/checkBox_3"
            tools:text="check answer 4"
            style="@style/Widget.AppCompat.EZoneQuiz.CheckBox.Answer"
            />
        <CheckBox
            android:id="@+id/checkBox_4"
            tools:text="check answer 5"
            style="@style/Widget.AppCompat.EZoneQuiz.CheckBox.Answer"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            android:onClick="onNext"
            />
    </LinearLayout>
</LinearLayout>